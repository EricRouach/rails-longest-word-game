<div class="container">
  <div class="title"><h1>Your score</h1></div>
  <div class="result-card">
    <h3>Message: <%= @result_hash[:message] %></h3>
    <ul>
      <li>Your word: <%= @word %></li>
      <li>Time Taken to answer: <%= @result_hash[:time] %> seconds</li>
      <li>Your score: <%= @result_hash[:score] %> </li>
    </ul>
  </div>
  <div class="my_button">
    <%= link_to "Restart", welcome_path, class: "btn-treehouse" %>
  </div>
</div>
